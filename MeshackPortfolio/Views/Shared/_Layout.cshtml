<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - MeshackPortfolio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f7fa;
            color: #333;
        }

        /* Navbar styles */
        .navbar {
            background-color: #001f3f; /* Navy Blue */
        }

        .navbar .navbar-brand, .navbar .nav-link {
            color: #fff;
        }

        .navbar .nav-link:hover {
            color: #007bff; /* Bright Blue */
        }

        /* Footer styles */
        footer {
            background-color: #001f3f; /* Navy Blue */
            color: #fff;
            padding: 15px 0;
            text-align: center;
        }

        /* Buttons */
        .btn-primary {
            background-color: #007bff; /* Bright Blue */
            border-color: #0056b3; /* Darker Blue */
        }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker Blue */
        }

        /* Headings */
        h1, h2, h3 {
            color: #001f3f; /* Navy Blue */
        }

        /* Custom card styling */
        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .card-title {
            color: #001f3f; /* Navy Blue */
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">MeshackPortfolio</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/About">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Skills">Skills</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Projects">Projects</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2024 Meshack Mthimkhulu. All Rights Reserved.</p>
            <a href="https://www.linkedin.com/in/meshackmthimkhulu" target="_blank">LinkedIn</a> |
            <a href="https://github.com/Meshack132" target="_blank">GitHub</a>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
